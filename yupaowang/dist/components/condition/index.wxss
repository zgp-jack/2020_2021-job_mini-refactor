    padding: 0 10rpx;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center; }
.recruit-condition-box .recruit-condition-item .recruit-condition-content {
      position: relative;
      padding-right: 50rpx;
      font-size: 30rpx;
      line-height: 80rpx; }
.recruit-condition-box .recruit-condition-item .recruit-condition-content .recruit-condition-select {
        position: absolute;
        display: block;
        width: 24rpx;
        height: 22rpx;
        top: 30rpx;
        right: 15rpx; }
.common-drawer-item {
  position: relative;
  width: 100%;
  height: 100%; }
.common-drawer-item .drawer-full-lists {
    position: fixed;
    width: 100%;
    left: 0;
    top: 0;
    height: 100%;
    background-color: white; }
.common-drawer-item .drawer-full-lists .drawer-list-item {
      position: relative;
      line-height: 90rpx;
      padding: 0 20rpx;
      font-size: 28rpx;
      border-bottom: 1rpx solid #dcdcdc; }
.common-drawer-item .drawer-full-lists .drawer-list-item-active {
      color: #0099ff; }
.common-drawer-item .drawer-half-lists {
    width: 50%;
    left: 50%;
    border-left: 1rpx solid #dcdcdc;
    z-index: 5; }