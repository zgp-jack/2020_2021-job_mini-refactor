.overwords {
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis; }
.showMore {
  position: relative;
  width: 100%;
  padding: 20rpx 0;
  text-align: center;
  font-size: 26rpx;
  color: #525252; }
.clearfix:after {
  content: "";
  display: block;
  clear: both;
  visibility: hidden;
  line-height: 0;
  height: 0;
  font-size: 0; }
.clearfix {
  zoom: 1; }
.search-header-box {
  position: relative;
  width: 100%;
  background-color: #0099ff;
  height: 100rpx;
  padding: 15rpx 20rpx;
  padding-right: 100rpx; }
.search-header-box .search-input {
    position: relative;
    width: 100%;
    background-color: white;
    border-radius: 8rpx;
    height: 70rpx;
    line-height: 70rpx;
    padding: 0 15rpx;
    font-size: 28rpx; }
.search-header-box .search-btn {
    position: absolute;
    right: 0;
    top: 15rpx;
    line-height: 70rpx;
    padding: 0 20rpx;
    color: white;
    font-size: 28rpx; }