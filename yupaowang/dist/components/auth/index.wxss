.user-auth-container {
  position: fixed;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
  z-index: 999;
  background-color: white; }
  .user-auth-container .user-auth-img {
    position: relative;
    display: block;
    width: 300rpx;
    height: 300rpx;
    margin: 80rpx auto 10rpx; }
  .user-auth-container .user-auth-title {
    position: relative;
    text-align: center;
    font-size: 32rpx;
    font-weight: bold;
    color: #555;
    line-height: 60rpx;
    letter-spacing: 2rpx; }
  .user-auth-container .user-auth-tips {
    display: block;
    position: relative;
    text-align: center;
    font-size: 32rpx;
    color: gray;
    line-height: 60rpx;
    letter-spacing: 2rpx; }
  .user-auth-container .user-btn {
    position: relative;
    width: 95%;
    line-height: 90rpx;
    text-align: center;
    border-radius: 5rpx;
    font-size: 30rpx;
    letter-spacing: 5rpx;
    margin-top: 30rpx; }
    .user-auth-container .user-btn::after {
      border-radius: 0;
      border: 0; }
  .user-auth-container .user-auth-submit {
    background: #67C23A;
    color: white; }
  .user-auth-container .user-auth-return {
    background: #ffffff;
    color: #555;
    border: 1rpx solid #f1f1f1; }

