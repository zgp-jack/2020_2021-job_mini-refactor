<block wx:if="{{$taroCompReady}}">
    <view class="recruit-lists-container">
        <block wx:for="{{data}}" wx:for-item="item" wx:for-index="_anonIdx4">
            <view class="recruit-list-item" wx:for="{{item}}" wx:for-item="d" wx:for-index="_anonIdx2">
                <block wx:if="{{d.top}}">
                    <image class="list-toprecruit-img" src="{{IMGCDNURL + 'newlist-jobzd.png'}}"></image>
                </block>
                <block wx:if="{{d.is_end == 2}}">
                    <image class="recruit-findend-img" src="{{IMGCDNURL + 'newlist-jobfindend.png'}}"></image>
                </block>
                <view class="recruit-list-header">
                    <view class="recruit-list-title overwords">{{d.title}}</view>
                    <block wx:if="{{d.top}}"><text class="recruit-list-settop">我要置顶</text>
                    </block>
                </view>
                <view class="recruit-list-body">
                    <image class="recruit-list-user" src="{{d.image}}"></image>
                    <view class="recruit-list-body-content">
                        <view class="recruit-body-header"><text class="recruit-list-username">{{d.user_name}}</text>
                            <block wx:if="{{d.is_end !== 2}}">
                                <image class="recruit-list-finding" src="{{IMGCDNURL + 'newlist-jobfinding.png'}}"></image>
                            </block>
                        </view>
                        <view class="recruit-list-words">
                            <view class="recruit-words-text">{{d.detail}}</view>
                        </view>
                    </view>
                </view>
                <view class="recruit-list-footer">
                    <image class="recruit-list-loc" src="{{IMGCDNURL + 'newlist-jobposi.png'}}"></image>
                    <view class="recruit-list-loctxt overwords">{{d.show_address}}</view><text class="recruit-list-time">{{d.time}}</text>
                </view>
            </view>
        </block>
    </view>
</block>