.yupao-common-container {
  position: relative;
  width: 100%;
  padding-bottom: 150rpx; }
.about-content {
  position: relative;
  display: block;
  width: 100%;
  padding: 0 27rpx; }
.about-content-header {
  position: relative;
  padding: 50rpx 0 15rpx; }
.about-content-headerbox {
  position: relative;
  background: white;
  padding: 10rpx; }
.about-header-title {
  position: absolute;
  display: block;
  width: 410rpx;
  height: 70rpx;
  background: url("http://cdn.yupao.com/miniprogram/images/biaoti.png") no-repeat;
  background-size: 100% 100%;
  text-align: center;
  font-size: 32rpx;
  line-height: 70rpx;
  left: 50%;
  margin-left: -205rpx;
  top: -40rpx;
  color: #fff;
  z-index: 3; }
.about-header-words {
  position: relative;
  font-size: 30rpx;
  text-align: center;
  line-height: 50rpx;
  padding: 30rpx 20rpx 20rpx; }
.about-yupao-industry {
  position: relative;
  background: url("http://cdn.yupao.com/miniprogram/images/bj1.png") no-repeat;
  background-size: 100% 100%;
  padding: 20rpx 0;
  height: 500rpx; }
.about-industry-item {
  padding: 10rpx 0; }
.about-industry-content {
  position: relative;
  display: block;
  width: 50%;
  float: left;
  padding: 20rpx;
  border-right: 1rpx solid #dcdcdc; }
.about-industry-content:nth-last-child(1) {
  border-right: 0; }
.about-industry-item .about-industry-item-title {
  color: #0099ff;
  font-size: 32rpx;
  line-height: 50rpx; }
.about-industry-item .about-industry-item-body {
  color: #101010;
  font-size: 28rpx; }
.about-content-header::after,
.about-content-header::before,
.yupao-about-group .about-group-img::before,
.yupao-about-group .about-group-img::after {
  position: absolute;
  content: '';
  display: block;
  width: 16rpx;
  height: 80rpx;
  background: url("http://cdn.yupao.com/miniprogram/images/roand.png") no-repeat;
  background-size: 100% 100%;
  bottom: -30rpx;
  left: 20rpx;
  z-index: 3; }
.about-content-header::before {
  left: auto;
  right: 20rpx; }
.yupao-about-group {
  position: relative;
  width: 100%;
  margin-top: 80rpx; }
.yupao-about-group .about-group-img {
  position: relative; }
.yupao-about-group-image {
  position: relative;
  display: block;
  width: 100%;
  margin-bottom: 15rpx; }
.yupao-about-group .about-group-img::before {
  bottom: -50rpx; }
.yupao-about-group .about-group-img::after {
  left: auto;
  right: 20rpx;
  bottom: -50rpx; }
.yupao-about-footer {
  position: relative;
  width: 100%;
  background: url("http://cdn.yupao.com/miniprogram/images/bj2.png") no-repeat;
  background-size: 100% 100%;
  padding: 30rpx 10rpx; }
.yupao-about-footer-text {
  display: block;
  text-align: center;
  font-size: 28rpx;
  line-height: 50rpx; }
.yupao-about-groupb .about-group-img:nth-last-child(1)::before,
.yupao-about-groupb .about-group-img:nth-last-child(1)::after {
  content: none; }