<block wx:if="{{$taroCompReady}}">
    <view>
        <block wx:if="{{showProfession}}">
            <profession compid="{{$compid__206}}"></profession>
        </block>
        <view class="header">注: 资料越完善，找活越容易</view>
        <form class="formBox">
            <view class="publish-recruit-card">
                <view class="publish-list-item"><text class="pulish-list-title">姓名</text>:
                    <input class="publish-list-input" type="text" placeholder="请输入你的名字" value="{{formData && formData.name}}" bindinput="anonymousFunc1" />
                </view>
            </view>
            <view class="publish-recruit-card">
                <picker class="publish-list-input" mode="selector" bindchange="anonymousFunc2" value="{{0}}" range="{{sexList}}">
                    <view class="publish-list-item-sex"><text class="pulish-list-title">性别</text>:
                        <input class="publish-list-input" type="text" disabled="{{true}}" placeholder="请选择性别" value="{{formData && formData.sex}}" />
                    </view>
                </picker>
            </view>
            <view class="publish-recruit-card">
                <picker mode="date" bindchange="anonymousFunc3" value="">
                    <view class="publish-list-item"><text class="pulish-list-title">出生日期</text>:
                        <input class="publish-list-input" type="text" disabled="{{true}}" placeholder="请选择出生日期" value="{{formData && formData.time}}" />
                    </view>
                </picker>
            </view>
            <view class="publish-recruit-card">
                <picker mode="selector" value="{{0}}" range="{{nationCurrent}}" bindchange="anonymousFunc4">
                    <view class="publish-list-item"><text class="pulish-list-title">民族</text>:
                        <input class="publish-list-input" type="text" disabled="{{true}}" placeholder="请选择民族" value="{{formData && formData.nationCurrentName}}" />
                    </view>
                </picker>
            </view>
            <view class="publish-recruit-card" bindtap="anonymousFunc5">
                <view class="publish-list-item"><text class="pulish-list-title">所属工种</text>:
                    <input class="publish-list-input" type="text" disabled="{{true}}" placeholder="请选择工种" value="{{anonymousState__temp}}" />
                </view>
            </view>
            <view class="publish-recruit-card">
                <view class="publish-list-item" bindtap="anonymousFunc6"><text class="pulish-list-title">所在地区</text>:
                    <view class="publish-list-input-area">
                        <input class="publish-list-input-left" type="text" disabled="{{true}}" placeholder="请选择地区" value="{{formData && formData.are}}" /><text class="publish-list-input-right" catchtap="anonymousFunc7">获取定位</text>
                    </view>
                </view>
            </view>
            <view class="publish-recruit-card">
                <view class="{{isCode ? 'publish-list-item-isCode' : 'publish-list-item-phone'}}"><text class="pulish-list-title">手机号码</text>:
                    <input class="publish-list-input" type="text" placeholder="请输入手机号码" maxlength="{{11}}" value="{{formData && formData.phone}}" bindinput="anonymousFunc8" />
                </view>
                <block wx:if="{{isCode}}">
                    <view class="publish-list-item-code"><text class="pulish-list-title">验证码</text>:
                        <input class="publish-list-input" type="text" placeholder="请输入验证码" bindinput="anonymousFunc9" value="{{formData && formData.code}}" />
                        <view class="publish-code-btn" bindtap="anonymousFunc10">{{text}}</view>
                    </view>
                </block>
            </view>
            <view class="publish-recruit-card">
                <view class="publish-list-ditals">
                    <view>自我介绍:</view>
                    <textarea class="textarea" placeholder="请简要介绍你所从事的行业以及工作经验..." value="{{formData && formData.details}}" bindinput="anonymousFunc11" maxlength="{{500}}"></textarea>
                </view>
                <view>
                    <words-total compid="{{$compid__207}}"></words-total>
                </view>
            </view>
        </form>
        <view class="footer">
            <button class="footer-btn" bindtap="anonymousFunc12">保存资料</button>
        </view>
    </view>
</block>