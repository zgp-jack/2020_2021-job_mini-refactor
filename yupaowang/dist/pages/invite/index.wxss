.overwords {
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis; }
.showMore {
  position: relative;
  width: 100%;
  padding: 20rpx 0;
  text-align: center;
  font-size: 26rpx;
  color: #525252; }
.clearfix:after {
  content: "";
  display: block;
  clear: both;
  visibility: hidden;
  line-height: 0;
  height: 0;
  font-size: 0; }
.clearfix {
  zoom: 1; }
.invite-container {
  position: relative;
  width: 100%; }
.invite-container .invite-item-icon::before,
  .invite-container .invite-item-icon::after {
    position: absolute;
    width: 8rpx;
    content: '';
    height: 30rpx;
    background-color: #0099ff;
    border-radius: 10rpx;
    top: -2rpx; }
.invite-container .invite-item-icon::before {
    left: 50rpx; }
.invite-container .invite-item-icon::after {
    right: 50rpx; }
.invite-container .invite-item {
    position: relative;
    width: 100%;
    padding: 20rpx;
    border-radius: 10rpx; }
.invite-container .invite-item .invite-header {
      background-color: white;
      padding: 20rpx;
      box-shadow: 0 0 10rpx #e7e6e4; }
.invite-container .invite-item .invite-header .invite-img {
        position: absolute;
        display: block;
        width: 110rpx;
        height: 110rpx;
        left: 40rpx;
        top: 50rpx; }
.invite-container .invite-item .invite-header .invite-text {
        position: relative;
        padding-left: 140rpx;
        font-size: 28rpx;
        line-height: 50rpx; }
.invite-container .invite-item .invite-header .invite-input {
        position: relative;
        margin-top: 15rpx;
        border-radius: 5rpx;
        border: 1rpx solid #dcdcdc;
        font-size: 28rpx;
        color: #333;
        height: 70rpx; }
.invite-container .invite-item .invite-btn {
      background-color: #0099ff;
      border-radius: 5rpx;
      color: white;
      text-align: center;
      line-height: 85rpx;
      font-size: 30rpx;
      letter-spacing: 5rpx;
      font-weight: bold;
      width: 80%;
      margin: 30rpx auto 0; }