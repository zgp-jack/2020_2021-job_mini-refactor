.overwords {
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis; }
.showMore {
  position: relative;
  width: 100%;
  padding: 20rpx 0;
  text-align: center;
  font-size: 26rpx;
  color: #525252; }
.clearfix:after {
  content: "";
  display: block;
  clear: both;
  visibility: hidden;
  line-height: 0;
  height: 0;
  font-size: 0; }
.clearfix {
  zoom: 1; }
.invite-ScrollView {
  width: 100%;
  position: fixed;
  top: 0;
  height: 110rpx;
  line-height: 110rpx;
  background-color: #FFF;
  white-space: nowrap; }
.invite-tab {
  margin-bottom: 20rpx; }
.invite-tab-box {
  display: inline-block;
  display: flex;
  width: 120rpx;
  height: 60rpx;
  text-align: center;
  line-height: 60rpx;
  margin: 0 24rpx;
  display: inline-block;
  color: black;
  font-size: 26rpx; }
.invite-content-box {
  margin-top: 130rpx; }
.invite-content {
  background: #FFF;
  padding: 20rpx;
  border-bottom: 1rpx solid #f5f5f5;
  display: flex; }
.invite-tab-active {
  background-color: #0099ff;
  color: white;
  position: relative;
  font-size: 26rpx;
  border-radius: 6rpx; }
.invite-content-img {
  height: 160rpx;
  width: 160rpx; }
.invite-content-right {
  padding-left: 30rpx;
  display: flex;
  justify-content: space-between;
  flex-direction: column; }
.invite-content-title {
  width: 520rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 32rpx;
  letter-spacing: 3rpx; }
.invite-content-desc {
  width: 520rpx;
  color: #969194;
  font-size: 28rpx;
  letter-spacing: 3rpx;
  height: 78rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  word-break: break-all; }
.invite-content-footer {
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 26rpx;
  color: #9a9999; }
.invite-nodata {
  text-align: center;
  display: block;
  line-height: 100rpx;
  font-size: 28rpx;
  text-align: center;
  letter-spacing: 2rpx; }