.recruitTopping {
  padding-bottom: 100rpx; }
.recruitTopping-header {
  padding-left: 37rpx;
  font-weight: bold;
  margin-top: 20rpx;
  font-size: 28rpx; }
.recruitTopping-content {
  padding: 37rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  padding-top: 20rpx; }
.recruitTopping-content-list {
  display: block;
  width: 30%;
  background: white;
  color: #333;
  text-align: center;
  padding: 0 10rpx;
  border-radius: 5rpx;
  line-height: 80rpx;
  font-size: 28rpx;
  margin-bottom: 20rpx;
  margin-top: 10rpx; }
.recruitTopping-content-list-click {
  display: block;
  width: 30%;
  background: #108eef;
  color: white;
  text-align: center;
  padding: 0 10rpx;
  border-radius: 5rpx;
  line-height: 80rpx;
  font-size: 28rpx;
  margin-bottom: 20rpx;
  margin-top: 10rpx; }
.recruitTopping-footer {
  position: fixed;
  bottom: 10rpx;
  left: 0;
  width: 100%; }
.recruitTopping-footer-btn {
  margin: 0 auto;
  width: 550rpx;
  background: #108EEF;
  line-height: 90rpx;
  text-align: center;
  color: white;
  font-size: 40rpx;
  letter-spacing: 4rpx;
  border-radius: 10rpx; }