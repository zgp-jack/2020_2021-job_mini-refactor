.overwords {
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis; }
.showMore {
  position: relative;
  width: 100%;
  padding: 20rpx 0;
  text-align: center;
  font-size: 26rpx;
  color: #525252; }
.clearfix:after {
  content: "";
  display: block;
  clear: both;
  visibility: hidden;
  line-height: 0;
  height: 0;
  font-size: 0; }
.clearfix {
  zoom: 1; }
.collection-tab {
  position: relative;
  display: flex;
  width: 100%;
  justify-content: space-around;
  height: 20rpx;
  justify-items: center;
  background: #fff;
  height: 80rpx;
  line-height: 80rpx;
  color: #6f6c6c;
  font-size: 30rpx;
  margin-top: 18rpx; }
.collection-modal-text {
  font-size: 20rpx;
  text-align: center;
  margin-left: 20%;
  line-height: 100rpx; }
.collection-error-text {
  font-size: 20rpx;
  text-align: center;
  margin-left: 10%;
  line-height: 100rpx; }
.collection.active-text {
  color: #0099ff;
  font-size: 30rpx; }
.collection-tab-box {
  width: 50%;
  text-align: center;
  border-right: 1rpx solid #C7C6C6; }
.collection-tab-content {
  display: flex;
  justify-content: center;
  align-items: center; }
.collection-tab-img {
  margin-right: 10rpx; }
.collection-tab-img Image {
    height: 26rpx;
    width: 26rpx; }
.at-modal__content {
  min-height: 10rpx !important; }
.recruit-lists-containerbox {
  width: 100%; }